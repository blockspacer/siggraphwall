<?py # -*- coding: utf-8 -*- ?>
<?py # vim: set et sw=4 sts=4 ts=4 ft=html: ?>
<?py n = 3 ?>
<?py for chunks in [items[i:i+n] for i in range(0, len(items), n)]: ?>
<div class="row-fluid imagefill-item">
    <?py for item in chunks: ?>
    <div class="span4">
        <a data-gallery="gallery" href="${item['teaser']}" title="${item['title']}">
            <img src="${item['thumb']}" />
        </a>
    </div>
<?py #endfor ?>
</div>
<?py #endfor ?>
