<?py # -*- coding: utf-8 -*- ?>
<?py # vim: set ft=html: ?>
<ul id="Grid">
    <?py for item in items: ?>
    <?py klass = ['mix'] ?>
    <?py klass.extend(item['keywords']) ?>
    <li class="#{' '.join(klass)}">
        <div class="content">
            <h3>${item['title']}</h3>
            <img src="${item['teaser']}" />
        </div>
    </li>
    <?py #endfor ?>
</ul>
